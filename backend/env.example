# Server Configuration
PORT=5001
NODE_ENV=development
ENABLE_SWAGGER=true
ENABLE_LOGGING=true

# Database Configuration
MONGODB_URI=mongodb://127.0.0.1:27017/booking4u
DB_MAX_POOL_SIZE=10
DB_SERVER_SELECTION_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d
JWT_REFRESH_EXPIRE=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_TTL=300

# Email Configuration (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Twilio Configuration (SMS/WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+966501234567

# Stripe Configuration (Payment Gateway)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# STC Pay Configuration (Saudi Payment Gateway)
STC_PAY_MERCHANT_ID=your-stc-pay-merchant-id
STC_PAY_SECRET_KEY=your-stc-pay-secret-key

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# WhatsApp Business API (alternative to Twilio)
WHATSAPP_API_TOKEN=your-whatsapp-api-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Sentry Configuration (error tracking)
SENTRY_DSN=your-sentry-dsn

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=booking4u-uploads

# Cloudinary Configuration (alternative to S3)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Development Settings
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_LOGGING=true

# Production Settings (override in production)
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=
