
{
  "name": "booking4u",
  "version": "1.0.0",
  "description": "نظام حجز المواعيد الذكي للمملكة العربية السعودية",
  "main": "start.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "postinstall": "cd backend && npm install && cd ../frontend && npm install",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:render": "cd frontend && npm install && npm run build",
    "frontend:start": "cd frontend && craco start",
    "frontend:build": "cd frontend && craco build",
    "frontend:test": "cd frontend && craco test"
  },
  "keywords": [
    "booking",
    "appointments",
    "saudi-arabia",
    "react",
    "nodejs",
    "mongodb",
    "express"
  ],
  "author": "Booking4U Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/booking4u.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/booking4u/issues"
  },
  "homepage": "https://github.com/your-username/booking4u#readme",
  "dependencies": {
    "@craco/craco": "^7.1.0",
    "axios": "^1.11.0",
    "mongodb": "^6.19.0"
  }
}